---
// Google Analytics + AdSense Component
const gaId = import.meta.env.PUBLIC_GA_MEASUREMENT_ID || '';
const adsbygooglePub = 'ca-pub-7431853210834432';
---

<!-- Google AdSense 사이트 확인 -->
<meta name="google-adsense-account" content={adsbygooglePub} />
<script async src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${adsbygooglePub}`} crossorigin="anonymous"></script>

{gaId && (
  <>
    <!-- Google Analytics -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`}></script>
    <script is:inline set:html={`
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', '${gaId}');
    `}></script>
  </>
)}
